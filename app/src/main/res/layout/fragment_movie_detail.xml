<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movie_pic"
            android:layout_width="118dp"

            android:maxHeight="110dp"
            android:layout_height="175dp"

            android:scaleType="centerCrop"
            android:src="@drawable/startrek"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron man 3"
            android:layout_toEndOf="@+id/movie_pic"
            android:layout_marginStart="10dp"
            android:textSize="36sp"
            android:id="@+id/text_title"
            />

      <TextView
            android:id="@+id/text_release"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date:"

          android:layout_below="@+id/text_title"
          android:layout_alignStart="@+id/text_title" />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May 3, 2013"


        android:layout_below="@+id/text_release"
        android:layout_alignStart="@+id/text_release" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running Time:"

            android:layout_below="@+id/text_date"
            android:layout_alignStart="@+id/text_date"
            android:layout_marginTop="32dp"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130 mins"
            android:id="@+id/timeText"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeText"
            android:layout_alignStart="@+id/timeText"
            android:text="Genre: Action"/>

            />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis starts here"
         />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"

        >

        <Button
            android:id="@+id/button_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="purchase"
            android:layout_gravity="bottom"

            android:textColor="@color/holo_blue_dark"
            android:background="@drawable/button_purchase"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>